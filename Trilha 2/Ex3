class Produto {
    private nome: string;
    private preco: number;
    private quantidade: number;

    constructor(nome: string, preco: number, quantidade: number) {
        this.nome = nome;
        this.preco = preco;
        this.quantidade = quantidade;
    }

    public calcularValorTotalEmEstoque(): number {
        return this.preco * this.quantidade;
    }

    public obterInformacoes(): string {
        return `Nome: ${this.nome}, Pre√ßo: R$ ${this.preco.toFixed(2)}, Quantidade: ${this.quantidade},
        Valor Total em Estoque: R$ ${this.calcularValorTotalEmEstoque().toFixed(2)}`;
    }
}